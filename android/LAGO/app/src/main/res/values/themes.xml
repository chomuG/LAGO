<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LAGO" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.LAGO" parent="Base.Theme.LAGO" />

    <!-- 스플래시 테마 -->
    <style name="Theme.LAGO.Splash" parent="Theme.SplashScreen">
        <!-- 배경색만 -->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!-- 아이콘 숨기기 -->
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <!-- 스플래시 후 테마 -->
        <item name="postSplashScreenTheme">@style/Theme.LAGO</item>
    </style>
</resources>