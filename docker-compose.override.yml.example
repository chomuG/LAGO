# =================================================================
# Docker Compose Override 예시 파일
# EC2 배포시 이 파일을 docker-compose.override.yml로 복사하여 사용
# =================================================================

services:
  backend:
    environment:
      # EC2 배포용 Redis 설정 (로컬 Redis 사용)
      - SPRING_REDIS_HOST=localhost
      - SPRING_REDIS_PORT=6379
      
      # EC2 배포용 데이터베이스 설정 (필요시 수정)
      - SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/stock_db
      - SPRING_DATASOURCE_USERNAME=${POSTGRES_USER}
      - SPRING_DATASOURCE_PASSWORD=${POSTGRES_PASSWORD}
      
      # 운영 프로파일 사용
      - SPRING_PROFILES_ACTIVE=prod
      
      # AI 서비스 (같은 EC2 사용시)
      - FINBERT_SERVER_HOST=http://localhost:5000
      - SERVICES_CHART_ANALYSIS_URL=http://localhost:5000/detect-patterns
    
    # EC2에서 호스트 네트워크 사용하여 로컬 Redis에 접근
    network_mode: host
    
    # 포트 매핑 (network_mode: host 사용시 자동으로 8081 포트 사용)
    # ports는 network_mode: host일 때 무시됨

  # EC2에서는 Redis와 TimescaleDB를 별도로 관리하므로 제외
  # (필요시 주석 해제)
  # redis:
  #   profiles: ["local-only"]
  # 
  # timescaledb:
  #   profiles: ["local-only"]