
# =================================================================
# LAGO 프로젝트 환경변수 템플릿
# 로컬 개발용과 EC2 배포용 설정 예시
# 실제 사용시 .env로 복사하여 값 수정 후 사용
# =================================================================

# =================================================================
# 로컬 개발용 설정 (기본값)
# =================================================================

# PostgreSQL (로컬 Docker Compose용)
POSTGRES_DB=stock_db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# Spring Boot 기본 설정
SPRING_PROFILES_ACTIVE=dev
SPRING_DATASOURCE_URL=jdbc:postgresql://timescaledb:5432/stock_db
SPRING_DATASOURCE_USERNAME=your_db_user
SPRING_DATASOURCE_PASSWORD=your_db_password
SPRING_JPA_HIBERNATE_DDL_AUTO=none
SPRING_JPA_SHOW_SQL=true

# Redis (로컬 Docker Compose용)
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
REDIS_STREAM_KEY=orders-stream
REDIS_STREAM_CONSUMER_GROUP=lago_group
REDIS_STREAM_CONSUMER_NAME=lago_consumer

# AI 서비스 (로컬 Docker Compose용)
FINBERT_SERVER_HOST=http://chart-analysis:5000
SERVICES_CHART_ANALYSIS_URL=http://chart-analysis:5000/detect-patterns
FINBERT_CLIENT_TIMEOUT=15000

# Jenkins
DOCKER_GID=999

# 로그 레벨
LOG_LEVEL=INFO

# =================================================================
# EC2 배포용 설정 예시 (아래 값들을 실제 환경에 맞게 변경)
# =================================================================

# EC2 배포시 아래 값들을 실제 값으로 변경하세요:
# 
# SPRING_PROFILES_ACTIVE=prod
# SPRING_DATASOURCE_URL=jdbc:postgresql://실제EC2주소:5432/stock_db
# SPRING_DATASOURCE_USERNAME=실제유저명
# SPRING_DATASOURCE_PASSWORD=실제패스워드
# 
# SPRING_REDIS_HOST=실제Redis주소
# SPRING_REDIS_PORT=6379
#
# FINBERT_SERVER_HOST=http://실제AI서비스주소:5000
# SERVICES_CHART_ANALYSIS_URL=http://실제AI서비스주소:5000/detect-patterns
